@inject IProductService ProductService
@page "/CreateProducts"
@using INVENTORY.CLIENT.Services.Interfaces
@inherits CreateProductModel

<h3>New Product</h3>
<div>
    <EditForm Model="@ProductCreate" OnSubmit="@AddNewProduct">
        <div class="form-group">
            <label>Referencia</label>
            <InputText @bind-Value="@ProductCreate.Reference"class="form-control" ></InputText>
        </div>
        <div class="form-group">
            <label>Cantidad</label>
            <InputNumber @bind-Value="@ProductCreate.Quantity"class="form-control" ></InputNumber>
        </div>
        <div class="form-group">
            <label>Nombre</label>
            <InputText @bind-Value="@ProductCreate.Name"class="form-control" ></InputText>
        </div>
        <div class="form-group">
            <label>Descripción</label>
            <InputText @bind-Value="@ProductCreate.Description"class="form-control" ></InputText>
        </div>
        <div class="form-group">
            <label>Precio</label>
            <InputNumber @bind-Value="@ProductCreate.Price"class="form-control" ></InputNumber>
        </div>
        <div class="form-group">
            <label>Fecha</label>
            <InputDate @bind-Value="@ProductCreate.Date"class="form-control" ></InputDate>
        </div>
        
        <button type="submit" class="btn btn-success" style="width:150px;">Create</button>
        <a href="GetProducts"class="btn btn-danger">Back to list</a>
    </EditForm>
</div>

